{
  "files.associations": {
    "**/charts/**/templates/**/*.yaml": "helm",
    "**/charts/**/templates/**/*.yml": "helm",
    "**/charts/**/templates/**/*.tpl": "helm",
    "**/charts/**/values.yaml": "helm",
    "**/charts/**/values.yml": "helm",
    "**/charts/**/Chart.yaml": "helm",
    "**/charts/**/Chart.yml": "helm",
    "**/templates/**/*.yaml": "helm",
    "**/templates/**/*.yml": "helm",
    "**/templates/**/*.tpl": "helm",
    "values.yaml": "helm",
    "values.yml": "helm",
    "Chart.yaml": "helm",
    "Chart.yml": "helm",
    "**/.helmignore": "ignore"
  },
  "helm.valuesFilesGlob": "**/values*.yaml",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/helm/helm/main/pkg/chartutil/jsonschema.json": [
      "Chart.yaml",
      "Chart.yml"
    ]
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.customTags": [
    "!reference sequence"
  ],
  "[helm]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  }
}
